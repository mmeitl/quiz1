<meta name="viewport" content="width=device-width, initial-scale=1">



<div class="page-header about">
    <h1 class = "title">Matthew Meitl</br ><small class="small">Random pictures</small></h1> 
    

  
<div class="clear"></div>

<div class = "jumbotron text-center ">
    <div class="col-xs-10 col-xs-offset-1 ">

  <!-- Button trigger modal -->

  </div>
  <button class="btn btn-primary btn-lg  " data-toggle="modal" data-target="#myImageModal">
    Add a Photo URL
  </button>
<div class = "container">
  
  <br />
  
  
  
    
      <!-- Modal -->
<div class="modal fade" id="myImageModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Add a Photo</h4>
      </div>
        <div class="modal-body">
        <%= simple_form_for @images, :url => images_create_path, :method => :POST do |f| %>
          <%= f.input :urls %>
          
       
        
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Add a image", :class => 'btn btn-primary' %>
        </div>
       <% end %>
      </div>
    </div>
</div>  


</div>  

        <img class = "img-responsive center-block well" src="<%= @images.urls %>">

</div>

    </div
</div>
